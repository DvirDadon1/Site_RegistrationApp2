<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Beta_Version">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BetaVersion">
        <activity android:name="com.example.Beta_Version.MyVisitors"></activity>
        <activity android:name="com.example.Beta_Version.RegisterYourSite" />
        <activity android:name="com.example.Beta_Version.Credits" />
        <activity android:name="com.example.Beta_Version.MyProfile" />
        <activity android:name="com.example.Beta_Version.Barcode" />
        <activity android:name="com.example.Beta_Version.Settings" />
        <activity android:name="com.example.Beta_Version.MyVisits" />
        <activity android:name="com.example.Beta_Version.Register_Activity" />
        <activity android:name="com.example.Beta_Version.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.Beta_Version.CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>